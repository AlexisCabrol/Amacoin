    <servlet>
        <servlet-name>litecoin</servlet-name>
        <servlet-class>controller.litecoin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ethereum</servlet-name>
        <servlet-class>controller.ethereum</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>panier</servlet-name>
        <servlet-class>controller.panier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>controller.account</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>paiement</servlet-name>
        <servlet-class>controller.paiement</servlet-class>
    </servlet>
